<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                          http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                          http://www.springframework.org/schema/context
                          http://www.springframework.org/schema/context/spring-context-4.0.xsd
                          http://code.alibabatech.com/schema/dubbo
                          http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
       default-lazy-init="true">
    <!-- annotation open -->
    <context:annotation-config/>
    <!-- load config -->
    <context:property-placeholder
            file-encoding="UTF-8"
            ignore-resource-not-found="true"
            system-properties-mode="OVERRIDE"
            location="file:/root/data/ows-service/config.properties"/>
    <!-- dubbo serve name-->
    <dubbo:application owner="ouyang" name="ows-open-serve" />
    <!--zookeeper注册中心 -->
    <dubbo:registry protocol="zookeeper" address="${dubbo.registry.url}"/>
    <!-- rest serve 配置:
            server:容器类型 如:servlet,jetty
            port:端口
            contextpath:context path
            threads:rest服务配置线程池大小
            accepts:同时接收的最大HTTP连接数
    -->
    <dubbo:protocol name="rest"
                      server="tomcat"
                      port="8888"
                      contextpath="services"
                      threads="500"
                      accepts="500"/>
    <!-- provider:提供者 -->
    <import resource="./dubbo/application-open-provider.xml" />
    <!-- consumer:消费者 -->
    <import resource="./dubbo/application-open-consumer.xml" />
</beans>